
{
  "entities": {
    "user_profile": {
      "title": "User Profile",
      "description": "Represents a user's profile information.",
      "type": "object",
      "properties": {
        "displayName": {
          "type": "string",
          "description": "The user's display name."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address."
        },
        "photoURL": {
          "type": "string",
          "format": "uri",
          "description": "URL of the user's profile picture."
        }
      }
    },
    "leaderboard_entry": {
      "title": "Leaderboard Entry",
      "description": "Represents a single entry in the leaderboard.",
      "type": "object",
      "properties": {
        "studentName": {
          "type": "string"
        },
        "profileUrl": {
          "type": "string",
          "format": "uri"
        },
        "campaignCompleted": {
          "type": "boolean"
        },
        "completionTime": {
          "type": "string",
          "format": "date-time"
        },
        "avatar": {
          "type": "string"
        }
      },
      "required": [
        "studentName",
        "profileUrl",
        "campaignCompleted",
        "completionTime"
      ]
    },
    "team_member": {
      "title": "Team Member",
      "description": "Represents a member of the GDG core team.",
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "Full name of the team member."
        },
        "role": {
          "type": "string",
          "enum": [
            "Lead",
            "Co-Lead",
            "Technical Team",
            "Management Team",
            "Design Team",
            "Core Team"
          ]
        },
        "position": {
          "type": "string",
          "description": "The specific position or title (e.g., Web Lead, Android Lead)."
        },
        "branch": {
          "type": "string"
        },
        "year": {
          "type": "string"
        },
        "photo": {
          "type": "string",
          "description": "A data URI of the member's photo."
        },
        "bio": {
          "type": "string",
          "description": "A short biography of the member."
        },
        "socials": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "href": {
                "type": "string"
              }
            }
          }
        }
      },
      "required": [
        "name",
        "role",
        "position",
        "branch",
        "year",
        "photo",
        "bio"
      ]
    },
    "event_registration": {
      "title": "Event Registration",
      "description": "Represents a user's registration for an event.",
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "phone": { "type": "string" },
        "rollNo": { "type": "string" },
        "branch": { "type": "string" },
        "year": { "type": "string" },
        "eventId": { "type": "string" },
        "eventName": { "type": "string" },
        "registeredAt": { "type": "string", "format": "date-time" }
      },
      "required": ["name", "email", "eventId", "eventName", "registeredAt"]
    },
    "contact_message": {
        "title": "Contact Message",
        "description": "Represents a message submitted through the contact form.",
        "type": "object",
        "properties": {
            "name": { "type": "string" },
            "email": { "type": "string", "format": "email" },
            "subject": { "type": "string" },
            "message": { "type": "string" },
            "createdAt": { "type": "string", "format": "date-time" },
            "isRead": { "type": "boolean" }
        },
        "required": ["name", "email", "subject", "message", "createdAt"]
    }
  },
  "auth": {
    "providers": [
      "anonymous"
    ]
  },
  "firestore": {
    "/leaderboard/{entry}": {
      "schema": {
        "$ref": "#/entities/leaderboard_entry"
      },
      "description": "Stores the leaderboard entries for the Google Cloud Career Practitioner campaign."
    },
    "/team/{member}": {
      "schema": {
        "$ref": "#/entities/team_member"
      },
      "description": "Stores the information for each core team member."
    },
    "/registrations/{registration}": {
        "schema": { "$ref": "#/entities/event_registration" },
        "description": "Stores all event registration data."
    },
    "/contacts/{message}": {
        "schema": { "$ref": "#/entities/contact_message" },
        "description": "Stores all messages from the contact form."
    }
  }
}
